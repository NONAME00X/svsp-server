<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.cxy.svspcxy.mapper.CategoryMapper">
    <select id="all" resultType="edu.cxy.svspcxy.entity.Category">
        select * from t_category where state = 'category_normal'
    </select>

    <select id="allState" resultType="edu.cxy.svspcxy.entity.Category">
        select * from t_category
    </select>

    <update id="commitState">
        update t_category set state = #{state} where id = #{id}
    </update>

    <insert id="add">
        insert into t_category values(null, #{name},'category_normal')
    </insert>

    <update id="edit">
        update t_category set name = #{name} where id = #{id}
    </update>
</mapper>
